extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success(2000)
    +alert-error(2000)
    
    .product-detail 
        .container.my-5
            .row 
                .col-6
                    .inner-thumb 
                        img(src=product.thumbnail, alt=product.title)
                .col-6 
                    h1(class="inner-title") #{product.title} 

                    if (product.category)
                        div(class="inner-category")
                        span Danh má»¥c: 
                        a(href=`/products/${product.category.slug}`) #{product.category.title}
                            
                    if (product.priceNew) 
                        div(class="inner-price-new") #{Number(product.priceNew).toLocaleString("vi-VN")}VND

                    if (product.price) 
                        div(class="inner-price-old") #{Number(product.price).toLocaleString("vi-VN")}VND

                    if (product.discountPercentage) 
                        div(class="inner-percent") Sale: <span>#{product.discountPercentage}%</span>

                    if (product.stock) 
                        div(class="inner-stock") Stock: <span>#{product.stock}</span> left
                    if (product.stock > 0)
                        form(
                            action=`/cart/add/${product.id}`
                            method="POST"
                        )
                            input(
                                class="form-control mb-2"
                                type="number"
                                name="quantity"
                                value="1"
                                min="1"
                                max=product.stock 
                            )
                            button(
                                type="submit"
                                class="btn btn-success btn-block"
                            ) Add to Cart
                    else
                        div(class="text-danger mt-3 fw-bold") Out of Stock
        hr

        .container.my-5
            .row 
                .col-12 
                    +box-head("Product Description")
                    .inner-desc !{product.description}

            button(
                class="btn btn-secondary"
                button-go-back 
            ) Go Back